{
    "manifest_version": 3,
    "name": "Dual Subtitle Viewer",
    "version": "1.0",
    "description": "Display two subtitle tracks simultaneously on videos",
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "node_modules/kuromoji/build/kuromoji.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "getYtSubs.js",
                "node_modules/kuromoji/dict/*.dat.gz"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}