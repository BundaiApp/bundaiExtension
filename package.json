{
  "name": "bundai-extension",
  "displayName": "Bundai-Japanese Anime Dual Subtitle Loader",
  "version": "1.0.0",
  "description": "A Japanese language learning, chromium based web extension",
  "author": "bundai",
  "scripts": {
    "dev": "plasmo dev",
    "build": "rm -rf build && plasmo build && mv build/chrome-mv3-prod build/prod && rm -rf build/chrome-mv3-dev 2>/dev/null; true",
    "package": "plasmo package"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@plasmohq/storage": "^1.15.0",
    "graphql": "^16.11.0",
    "kuromoji": "^0.1.2",
    "lodash": "^4.17.21",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "wanakana": "^5.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "plasmohq": {
    "artifactName": "bundai-extension"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "cookies"
    ],
    "host_permissions": [
      "*://*.youtube.com/*",
      "http://localhost:8000/*",
      "http://localhost:3000/*",
      "https://api.bundai.app/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "tabs/*",
          "node_modules/kuromoji/dict/*.dat.gz",
          "assets/data/japanese/jmdict-simplified-flat-full.json"
        ],
        "matches": [
          "*://*.youtube.com/*"
        ]
      }
    ]
  }
}
