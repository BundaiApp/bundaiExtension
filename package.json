{
  "name": "bundai-extension-plasmo",
  "displayName": "Bundai extension plasmo",
  "version": "0.0.1",
  "description": "A Japanese language learning, chromium based web extension",
  "author": "bundai",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "kuromoji": "^0.1.2",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "node_modules/kuromoji/dict/*.dat.gz",
          "assets/data/japanese/jmdict-simplified-flat-full.json"
        ],
        "matches": [
          "*://*.youtube.com/*"
        ]
      }
    ]
  }
}